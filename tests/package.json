{
  "name": "@icrs-sparc/tests",
  "version": "1.0.0",
  "description": "Test suite for ICRS SPARC - Foreign Trade Zone Operations Management System",
  "main": "jest.config.js",
  "scripts": {
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "jest --config jest.config.js backend/",
    "test:frontend": "jest --config jest.config.js frontend/",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:hts": "node scripts/run-hts-tests.js",
    "test:hts:basic": "node scripts/run-hts-tests.js hts-basic",
    "test:hts:api": "node scripts/run-hts-tests.js hts-api",
    "test:hts:integration": "node scripts/run-hts-tests.js hts-integration",
    "test:hts:errors": "node scripts/run-hts-tests.js hts-errors",
    "test:hts:all": "node scripts/run-hts-tests.js hts-all",
    "test:hts:smoke": "node scripts/run-hts-tests.js hts-smoke",
    "test:hts:chrome": "node scripts/run-hts-tests.js --browser chrome",
    "test:hts:firefox": "node scripts/run-hts-tests.js --browser firefox",
    "test:hts:mobile": "node scripts/run-hts-tests.js --browser mobile",
    "test:list": "node scripts/run-hts-tests.js list",
    "test:install": "playwright install",
    "test:report": "playwright show-report",
    "test:clean": "node scripts/run-hts-tests.js clean",
    "test:ci": "npm run test:backend && npm run test:frontend && npm run test:hts:smoke",
    "test:coverage": "jest --coverage --config jest.config.js",
    "lint": "eslint . --ext .js,.jsx --fix",
    "lint:check": "eslint . --ext .js,.jsx"
  },
  "keywords": [
    "testing",
    "e2e",
    "playwright", 
    "jest",
    "hts",
    "foreign-trade-zone",
    "sparc",
    "icrs"
  ],
  "author": "ICRS SPARC Team",
  "license": "ISC",
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "jest": "^29.7.0",
    "@jest/globals": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/user-event": "^14.5.0",
    "msw": "^2.0.0",
    "supertest": "^6.3.0",
    "eslint": "^8.54.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-playwright": "^0.18.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "collectCoverageFrom": [
      "backend/**/*.js",
      "frontend/**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/test-results/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/backend/**/*.test.js",
      "**/frontend/**/*.test.js"
    ],
    "moduleNameMapping": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    }
  }
}
