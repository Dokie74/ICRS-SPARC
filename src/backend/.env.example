# ICRS SPARC Backend API Environment Configuration

# ==============================================
# Supabase Configuration (Required)
# ==============================================
# Get these values from your Supabase project dashboard
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-key-here

# ==============================================
# API Server Configuration
# ==============================================
PORT=5000
NODE_ENV=development

# Frontend URL for CORS configuration
FRONTEND_URL=http://localhost:3000

# ==============================================
# Security Configuration
# ==============================================
# JWT secret for token signing (generate a strong secret)
JWT_SECRET=your-super-secure-jwt-secret-key-here

# Rate limiting configuration (requests per 15 minute window)
RATE_LIMIT_REQUESTS=1000

# ==============================================
# Database Configuration
# ==============================================
# Connection pool settings (optional)
DB_POOL_SIZE=10
DB_CONNECTION_TIMEOUT=60000

# ==============================================
# Logging Configuration
# ==============================================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# Enable detailed request logging (development only)
ENABLE_DETAILED_LOGGING=true

# ==============================================
# Foreign Trade Zone Configuration
# ==============================================
# Default customs values and settings
DEFAULT_CUSTOMS_BROKER=Your-Customs-Broker
DEFAULT_COUNTRY_OF_ORIGIN=US
DEFAULT_CURRENCY=USD

# Low inventory alert threshold
LOW_INVENTORY_THRESHOLD=10

# ==============================================
# External Service Configuration (Optional)
# ==============================================
# For future integrations
# CUSTOMS_API_URL=
# CUSTOMS_API_KEY=
# EMAIL_SERVICE_API_KEY=
# NOTIFICATION_SERVICE_URL=

# ==============================================
# Development Tools
# ==============================================
# Enable API documentation endpoint
ENABLE_API_DOCS=true

# Enable health check detailed info
HEALTH_CHECK_DETAILED=true